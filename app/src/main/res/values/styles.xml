<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="FeedArticleOnListTitleRead">
        <item name="android:textColor">@color/feed_article_on_list_title</item>
        <item name="android:shadowColor">@color/feed_article_on_list_title_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="CabTitle">
        <item name="android:textColor">@color/contextual_toolbar_title</item>
        <item name="android:textSize">@dimen/cab_title</item>
    </style>

    <style name="FeedArticleTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/feed_article_title</item>
        <item name="android:textSize">@dimen/feed_article_title</item>
    </style>

    <style name="FeedArticlePreview">
        <item name="android:textColor">@color/feed_article_preview</item>
        <item name="android:textSize">@dimen/feed_article_preview</item>
        <item name="android:shadowColor">@color/feed_article_preview_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="NavigationDrawerEntryText">
        <item name="android:textColor">@color/navigation_drawer_entry_text_unselected</item>
        <item name="android:textSize">@dimen/navigation_drawer_entry_text</item>
    </style>

    <style name="Toolbar">
        <item name="android:titleTextStyle">@style/ToolbarTitle</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
    </style>
</resources>
