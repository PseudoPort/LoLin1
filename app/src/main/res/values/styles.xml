<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/standard_background</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="FeedArticleOnListTitleUnread">
        <item name="android:textSize">@dimen/feed_article_on_list_title</item>
        <item name="android:textColor">@color/feed_article_on_list_title</item>
        <item name="android:shadowColor">@color/feed_article_on_list_title_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="FeedArticleOnListTitleRead" parent="@style/FeedArticleOnListTitleUnread">
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="FeedArticleTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/feed_article_title</item>
        <item name="android:textSize">@dimen/feed_article_title</item>
    </style>

    <style name="FeedArticlePreview">
        <item name="android:textColor">@color/feed_article_preview</item>
        <item name="android:textSize">@dimen/feed_article_preview</item>
        <item name="android:shadowColor">@color/feed_article_preview_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="NavigationDrawerEntryText">
        <item name="android:textColor">@color/navigation_drawer_entry_text_unselected</item>
        <item name="android:textSize">@dimen/navigation_drawer_entry_text</item>
    </style>

    <style name="Toolbar">
        <item name="android:titleTextStyle">@style/ToolbarTitle</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
    </style>

    <style name="NavigationDrawerUserData">
        <item name="android:textColor">@color/navigation_drawer_user_data</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/navigation_drawer_user_data_title_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="NavigationDrawerUserData.Subtitle">
        <item name="android:textSize">@dimen/navigation_drawer_user_data_subtitle_size</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="AppTheme.InformativeLoginTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/disclaimer_text_size</item>
        <item name="android:shadowColor">@color/material_blue_500</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="AppTheme.LoginButtonTextStyle" parent="AppTheme.InformativeLoginTextStyle">
        <item name="android:shadowColor">@color/material_orange_500</item>
    </style>

    <style name="AppTheme.CredentialsFloatLabelStyle" parent="TextAppearance.FLL.FloatLabel">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/material_blue_500</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.ChatTitleStyle">
        <item name="android:textSize">@dimen/chat_title_text</item>
        <item name="android:textColor">@color/material_deep_purple_900</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ChatFriendUserNameStyle">
        <item name="android:textSize">@dimen/chat_friend_username_text</item>
        <item name="android:textColor">@color/material_blue_500</item>
        <item name="android:shadowColor">@color/material_green_900</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ChatFriendStatusStyle">
        <item name="android:textSize">@dimen/chat_friend_status_text</item>
        <item name="android:textColor">@color/material_green_900</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.ChatTimestampTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.ChatMessageBase">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ChatMessageFromOtherTextStyle" parent="AppTheme.ChatMessageBase">
        <item name="android:textColor">@color/material_blue_500</item>
    </style>

    <style name="AppTheme.ChatMessageFromMeTextStyle" parent="AppTheme.ChatMessageBase">
        <item name="android:textColor">@color/material_blue_800</item>
    </style>
</resources>
